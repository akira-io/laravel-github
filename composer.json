{
    "name": "akira/laravel-github",
    "description": "Advanced GitHub API integration for Laravel 12 with typed DTOs and Collections.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Kidiatoliny",
            "email": "kidiatoliny@gmail.com"
        }
    ],
    "require": {
        "php": "^8.4.0",
        "knplabs/github-api": "^3.16"
    },
    "require-dev": {
        "laravel/pint": "^1.24.0",
        "orchestra/testbench": "^10.6",
        "peckphp/peck": "^0.1.3",
        "pestphp/pest": "^4.1.0",
        "pestphp/pest-plugin-type-coverage": "^4.0.2",
        "phpstan/phpstan": "^2.1.26",
        "rector/rector": "^2.1.7",
        "symfony/var-dumper": "^7.3.3"
    },
    "autoload": {
        "psr-4": {
            "Akira\\GitHub\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Akira\\GitHub\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Akira\\GitHub\\GitHubServiceProvider"
            ],
            "aliases": {
                "GitHub": "Akira\\GitHub\\Facades\\GitHub"
            }
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "scripts": {
        "lint": "pint",
        "refactor": "rector",
        "test:type-coverage": "pest --type-coverage --exactly=100 --compact",
        "test:typos": "peck",
        "test:lint": "pint --test",
        "test:unit": "pest --coverage --exactly=100 --compact",
        "test:types": "phpstan",
        "test:refactor": "rector --dry-run",
        "test": [
            "@test:lint",
            "@test:type-coverage",
            "@test:typos",
            "@test:unit",
            "@test:types",
            "@test:refactor"
        ]
    }
}
